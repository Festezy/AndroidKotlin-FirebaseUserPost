<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.CreateProfileActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CREATE PROFILE"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/createProfileImageView"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_person_24"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />
        </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/createProfileNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="48dp"
                android:hint="Name"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        <EditText
            android:id="@+id/createProfileBioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:hint="Bio"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/createProfileEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/createProfileCREATETextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="CREATE"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/createProfileProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>